<footer class="bg-black text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Company Information -->
      <div class="lg:col-span-2">
        <h3 class="text-2xl font-bold text-white mb-4">{{ shop.name }}</h3>
        {% if section.settings.company_description != blank %}
          <p class="text-gray-300 mb-6 leading-relaxed">
            {{ section.settings.company_description }}
          </p>
        {% endif %}
        
        <!-- Social Media Links -->
        {% if section.settings.show_social_links %}
          <div class="flex space-x-4">
            {% if section.settings.facebook_url != blank %}
              <a href="{{ section.settings.facebook_url }}" 
                 class="text-gray-400 hover:text-green-400 transition-colors duration-200"
                 target="_blank"
                 rel="noopener noreferrer">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.instagram_url != blank %}
              <a href="{{ section.settings.instagram_url }}" 
                 class="text-gray-400 hover:text-green-400 transition-colors duration-200"
                 target="_blank"
                 rel="noopener noreferrer">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.611-3.132-1.551-.684-.94-.684-2.122 0-3.062.684-.94 1.835-1.551 3.132-1.551 1.297 0 2.448.611 3.132 1.551.684.94.684 2.122 0 3.062-.684.94-1.835 1.551-3.132 1.551zm7.718-6.713H13.11v-1.613c0-.729-.593-1.322-1.322-1.322s-1.322.593-1.322 1.322v1.613H7.41c-.729 0-1.322.593-1.322 1.322s.593 1.322 1.322 1.322h3.056v1.613c0 .729.593 1.322 1.322 1.322s1.322-.593 1.322-1.322V12.92h3.057c.729 0 1.322-.593 1.322-1.322s-.593-1.322-1.322-1.322z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.twitter_url != blank %}
              <a href="{{ section.settings.twitter_url }}" 
                 class="text-gray-400 hover:text-green-400 transition-colors duration-200"
                 target="_blank"
                 rel="noopener noreferrer">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.youtube_url != blank %}
              <a href="{{ section.settings.youtube_url }}" 
                 class="text-gray-400 hover:text-green-400 transition-colors duration-200"
                 target="_blank"
                 rel="noopener noreferrer">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.tiktok_url != blank %}
              <a href="{{ section.settings.tiktok_url }}" 
                 class="text-gray-400 hover:text-green-400 transition-colors duration-200"
                 target="_blank"
                 rel="noopener noreferrer">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Quick Links</h4>
        {% if section.settings.quick_links_menu != blank %}
          <nav class="space-y-2">
            {% for link in linklists[section.settings.quick_links_menu].links %}
              <a href="{{ link.url }}" 
                 class="block text-gray-300 hover:text-green-400 transition-colors duration-200">
                {{ link.title }}
              </a>
            {% endfor %}
          </nav>
        {% endif %}
      </div>
      
      <!-- Customer Service -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Customer Service</h4>
        {% if section.settings.customer_service_menu != blank %}
          <nav class="space-y-2">
            {% for link in linklists[section.settings.customer_service_menu].links %}
              <a href="{{ link.url }}" 
                 class="block text-gray-300 hover:text-green-400 transition-colors duration-200">
                {{ link.title }}
              </a>
            {% endfor %}
          </nav>
        {% endif %}
      </div>
    </div>
    
    <!-- Newsletter Signup -->
    {% if section.settings.show_newsletter %}
      <div class="mt-12 pt-8 border-t border-gray-700">
        <div class="max-w-md mx-auto text-center">
          <h4 class="text-lg font-semibold text-white mb-2">
            {{ section.settings.newsletter_title | default: "Stay Updated" }}
          </h4>
          <p class="text-gray-300 mb-4">
            {{ section.settings.newsletter_description | default: "Subscribe to our newsletter for the latest updates and exclusive offers." }}
          </p>
          <form action="{{ shop.url }}/contact#contact_form" method="post" class="flex flex-col sm:flex-row gap-3">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="✓">
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="Enter your email" 
              required
              class="flex-1 px-4 py-2 bg-gray-800 text-white border border-gray-600 rounded focus:outline-none focus:border-green-400"
            >
            <button 
              type="submit" 
              class="px-6 py-2 bg-green-400 text-black font-medium rounded hover:bg-green-500 transition-colors duration-200"
            >
              Subscribe
            </button>
          </form>
        </div>
      </div>
    {% endif %}
    
    <!-- Footer Bottom -->
    <div class="mt-12 pt-8 border-t border-gray-700 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm mb-4 md:mb-0">
        {{ section.settings.copyright_text | default: "© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved." }}
      </p>
      
      <!-- Policy Links -->
      {% if section.settings.policy_menu != blank %}
        <nav class="flex flex-wrap gap-6">
          {% for link in linklists[section.settings.policy_menu].links %}
            <a href="{{ link.url }}" 
               class="text-gray-400 hover:text-green-400 text-sm transition-colors duration-200">
              {{ link.title }}
            </a>
          {% endfor %}
        </nav>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Company Information"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "Your trusted partner for premium fitness supplements and nutrition products. Quality guaranteed, results delivered."
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "checkbox",
      "id": "show_social_links",
      "label": "Show Social Media Links",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "header",
      "content": "Footer Menus"
    },
    {
      "type": "link_list",
      "id": "quick_links_menu",
      "label": "Quick Links Menu",
      "info": "Select a menu to display quick links"
    },
    {
      "type": "link_list",
      "id": "customer_service_menu",
      "label": "Customer Service Menu",
      "info": "Select a menu to display customer service links"
    },
    {
      "type": "link_list",
      "id": "policy_menu",
      "label": "Policy Menu",
      "info": "Select a menu to display policy links (Privacy, Terms, etc.)"
    },
    {
      "type": "header",
      "content": "Newsletter Signup"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show Newsletter Signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Stay Updated"
    },
    {
      "type": "textarea",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Subscribe to our newsletter for the latest updates and exclusive offers."
    },
    {
      "type": "header",
      "content": "Footer Bottom"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "info": "Leave blank to use default copyright text with current year and shop name"
    }
  ]
}
{% endschema %}