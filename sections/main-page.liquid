<div class="page">
  <div class="container">
    <header class="page__header">
      <h1 class="page__title">{{ page.title }}</h1>
    </header>

    <div class="page__content">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "class": "section-page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "wide",
          "label": "Wide"
        },
        {
          "value": "full",
          "label": "Full width"
        }
      ],
      "default": "wide"
    }
  ]
}
{% endschema %}