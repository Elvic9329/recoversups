{% comment %}
  RecoverSups Featured Products Section
  Displays a grid of featured products with BEM methodology
  External CSS: section-featured-products.css
{% endcomment %}

<section class="featured-products">
  <div class="container">
    {% if section.settings.section_title != blank or section.settings.section_description != blank %}
      <div class="featured-products__header">
        {% if section.settings.section_title != blank %}
          <h2 class="featured-products__title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_description != blank %}
          <p class="featured-products__description">{{ section.settings.section_description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="featured-products__grid featured-products__grid--columns-{{ section.settings.desktop_columns }}">
      {% assign products_collection = collections[section.settings.collection] %}
      {% assign products_to_show = section.settings.products_count | default: 8 %}
      
      {% if products_collection.products.size > 0 %}
        {% for product in products_collection.products limit: products_to_show %}
          <div class="product-card">
            <div class="product-card__image-container">
              {% if product.featured_image %}
                <a href="{{ product.url }}" class="product-card__image-link">
                  <img 
                    src="{{ product.featured_image | img_url: '400x400' }}" 
                    alt="{{ product.featured_image.alt | default: product.title }}"
                    class="product-card__image"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                </a>
              {% else %}
                <div class="product-card__placeholder">
                  <span>No Image</span>
                </div>
              {% endif %}

              {% if product.compare_at_price > product.price %}
                <div class="product-card__sale-badge">
                  {% assign discount = product.compare_at_price | minus: product.price %}
                  {% assign discount_percent = discount | times: 100 | divided_by: product.compare_at_price %}
                  -{{ discount_percent }}%
                </div>
              {% endif %}
            </div>

            <div class="product-card__info">
              <h3 class="product-card__title">
                <a href="{{ product.url }}" class="product-card__title-link">
                  {{ product.title }}
                </a>
              </h3>

              {% if section.settings.show_description and product.description != blank %}
                <p class="product-card__description">
                  {{ product.description | strip_html | truncate: 100 }}
                </p>
              {% endif %}

              <div class="product-card__price">
                {% if product.compare_at_price > product.price %}
                  <span class="product-card__sale-price">
                    {{ product.price | money }}
                  </span>
                  <span class="product-card__original-price">
                    {{ product.compare_at_price | money }}
                  </span>
                {% else %}
                  <span class="product-card__regular-price">
                    {{ product.price | money }}
                  </span>
                {% endif %}
              </div>

              {% if product.available %}
                <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-card__form" data-product-form>
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <button type="submit" class="product-card__add-to-cart">
                    Add to Cart
                  </button>
                </form>
              {% else %}
                <button disabled class="product-card__add-to-cart">
                  Sold Out
                </button>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="featured-products__empty">
          <p class="featured-products__empty-text">No products found in the selected collection.</p>
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_view_all and products_collection.products.size > products_to_show %}
      <div class="featured-products__view-all">
        <a href="{{ products_collection.url }}" class="featured-products__view-all-btn">
          View All Products
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% comment %}
  Add to cart functionality handled by main theme.js
  Styles: section-featured-products.css
{% endcomment %}

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "featured-products-section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "info": "Optional description text below the title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection",
      "info": "Select a collection to display products from"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of Products",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "select",
      "id": "desktop_columns",
      "label": "Desktop Columns",
      "options": [
        {
          "value": "3",
          "label": "3 Columns"
        },
        {
          "value": "4",
          "label": "4 Columns"
        }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Product Descriptions",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "settings": {
        "section_title": "Featured Products",
        "section_description": "Check out our most popular supplements",
        "products_count": 8,
        "desktop_columns": "4",
        "show_description": true,
        "show_view_all": true
      }
    }
  ]
}
{% endschema %}