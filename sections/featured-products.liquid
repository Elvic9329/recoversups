{% comment %}
  PowerUp Gym Featured Products Section
  Displays a grid of featured products with proper Shopify integration
{% endcomment %}

<section class="featured-products py-16 bg-white">
  <div class="container">
    <!-- Section Header -->
    {% if section.settings.section_title != blank or section.settings.section_description != blank %}
      <div class="text-center mb-12">
        {% if section.settings.section_title != blank %}
          <h2 class="text-h2 font-bold text-dark-gray mb-4">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_description != blank %}
          <p class="text-body text-medium-gray max-w-2xl mx-auto">{{ section.settings.section_description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <!-- Products Grid -->
    <div class="products-grid grid grid-cols-2 md:grid-cols-3 lg:grid-cols-{{ section.settings.desktop_columns }} gap-5 md:gap-6">
      {% assign products_collection = collections[section.settings.collection] %}
      {% assign products_to_show = section.settings.products_count | default: 8 %}
      
      {% if products_collection.products.size > 0 %}
        {% for product in products_collection.products limit: products_to_show %}
          <div class="product-card group">
            <!-- Product Image Container -->
            <div class="product-image-container relative mb-4 overflow-hidden rounded-md bg-light-gray">
              {% if product.featured_image %}
                <a href="{{ product.url }}" class="block">
                  <img 
                    src="{{ product.featured_image | img_url: '400x400' }}" 
                    alt="{{ product.featured_image.alt | default: product.title }}"
                    class="w-full h-48 md:h-56 object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  >
                </a>
              {% else %}
                <div class="w-full h-48 md:h-56 bg-light-gray flex items-center justify-center">
                  <span class="text-medium-gray text-sm">No Image</span>
                </div>
              {% endif %}

              <!-- Sale Badge -->
              {% if product.compare_at_price > product.price %}
                <div class="sale-badge absolute top-2 left-2 bg-accent-green text-white text-xs font-medium px-2 py-1 rounded-full">
                  {% assign discount = product.compare_at_price | minus: product.price %}
                  {% assign discount_percent = discount | times: 100 | divided_by: product.compare_at_price %}
                  -{{ discount_percent }}%
                </div>
              {% endif %}
            </div>

            <!-- Product Info -->
            <div class="product-info">
              <!-- Product Title -->
              <h3 class="product-title text-product-title font-medium text-dark-gray mb-2 line-clamp-2">
                <a href="{{ product.url }}" class="hover:text-accent-green transition-colors duration-200">
                  {{ product.title }}
                </a>
              </h3>

              <!-- Product Description -->
              {% if section.settings.show_description and product.description != blank %}
                <p class="product-description text-body-sm text-medium-gray mb-3 line-clamp-2">
                  {{ product.description | strip_html | truncate: 100 }}
                </p>
              {% endif %}

              <!-- Product Price -->
              <div class="product-price mb-4">
                {% if product.compare_at_price > product.price %}
                  <span class="sale-price text-price-sale font-bold text-dark-gray">
                    {{ product.price | money }}
                  </span>
                  <span class="original-price text-price-original text-medium-gray line-through ml-2">
                    {{ product.compare_at_price | money }}
                  </span>
                {% else %}
                  <span class="price text-price-sale font-bold text-dark-gray">
                    {{ product.price | money }}
                  </span>
                {% endif %}
              </div>

              <!-- Add to Cart Button -->
              <div class="add-to-cart">
                {% if product.available %}
                  <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button 
                      type="submit" 
                      class="add-to-cart-btn w-full bg-accent-green text-white font-medium py-2 px-4 rounded-sm hover:bg-opacity-90 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent-green focus:ring-offset-2"
                    >
                      Add to Cart
                    </button>
                  </form>
                {% else %}
                  <button 
                    disabled 
                    class="add-to-cart-btn w-full bg-medium-gray text-white font-medium py-2 px-4 rounded-sm cursor-not-allowed"
                  >
                    Sold Out
                  </button>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <!-- Fallback for no products -->
        <div class="col-span-full text-center py-12">
          <p class="text-medium-gray text-lg">No products found in the selected collection.</p>
        </div>
      {% endif %}
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all and products_collection.products.size > products_to_show %}
      <div class="text-center mt-12">
        <a 
          href="{{ products_collection.url }}" 
          class="view-all-btn inline-block bg-primary-black text-white font-medium py-3 px-8 rounded-sm hover:bg-opacity-90 transition-colors duration-200"
        >
          View All Products
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .featured-products .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .featured-products .product-card {
    transition: transform 0.200s ease-in-out;
  }

  .featured-products .product-card:hover {
    transform: translateY(-2px);
  }

  .featured-products .product-form {
    position: relative;
  }

  .featured-products .add-to-cart-btn:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(126, 211, 33, 0.2);
  }

  .featured-products .add-to-cart-btn:active:not(:disabled) {
    transform: translateY(0);
  }

  /* Loading state for add to cart */
  .featured-products .product-form.loading .add-to-cart-btn {
    opacity: 0.7;
    cursor: not-allowed;
  }

  /* Responsive grid adjustments */
  @media (max-width: 768px) {
    .featured-products .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .featured-products .products-grid.grid-cols-4 {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<script>
  // Add to cart functionality
  document.querySelectorAll('.featured-products .product-form').forEach(form => {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const button = this.querySelector('.add-to-cart-btn');
      const originalText = button.textContent;
      
      // Add loading state
      this.classList.add('loading');
      button.textContent = 'Adding...';
      
      fetch('/cart/add.js', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        // Success feedback
        button.textContent = 'Added!';
        button.style.backgroundColor = '#7ED321';
        
        // Update cart count if cart drawer exists
        if (window.updateCartCount) {
          window.updateCartCount();
        }
        
        // Reset button after 2 seconds
        setTimeout(() => {
          button.textContent = originalText;
          button.style.backgroundColor = '';
          this.classList.remove('loading');
        }, 2000);
      })
      .catch(error => {
        console.error('Error:', error);
        button.textContent = 'Error';
        
        // Reset button after 2 seconds
        setTimeout(() => {
          button.textContent = originalText;
          this.classList.remove('loading');
        }, 2000);
      });
    });
  });
</script>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "featured-products-section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "info": "Optional description text below the title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection",
      "info": "Select a collection to display products from"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of Products",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "select",
      "id": "desktop_columns",
      "label": "Desktop Columns",
      "options": [
        {
          "value": "3",
          "label": "3 Columns"
        },
        {
          "value": "4",
          "label": "4 Columns"
        }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Product Descriptions",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "settings": {
        "section_title": "Featured Products",
        "section_description": "Check out our most popular supplements",
        "products_count": 8,
        "desktop_columns": "4",
        "show_description": true,
        "show_view_all": true
      }
    }
  ]
}
{% endschema %}