<div class="product-categories">
  <div class="container">
    <h2 class="product-categories__title">{{ section.settings.title }}</h2>
    
    <div class="product-categories__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'category' %}
            <div class="product-categories__item">
              <a href="{{ block.settings.link }}" class="product-categories__link">
                {% if block.settings.image %}
                  <div class="product-categories__image">
                    <img src="{{ block.settings.image | img_url: '400x300' }}" 
                         alt="{{ block.settings.title }}" 
                         loading="lazy">
                  </div>
                {% endif %}
                
                <div class="product-categories__content">
                  <h3 class="product-categories__category-title">
                    {{ block.settings.title }}
                  </h3>
                  
                  {% if block.settings.description %}
                    <p class="product-categories__description">
                      {{ block.settings.description }}
                    </p>
                  {% endif %}
                </div>
              </a>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Categories",
  "class": "section-product-categories",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Shop by Category"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category title",
          "default": "Category"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Category description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Categories",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Protein",
            "description": "High-quality protein supplements"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Pre-Workout",
            "description": "Energy and performance boosters"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Recovery",
            "description": "Post-workout recovery supplements"
          }
        }
      ]
    }
  ]
}
{% endschema %}