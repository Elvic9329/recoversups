          "type": "image_picker",
          "id": "image",
          "label": "Slide image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide title",
          "default": "Slide Title"
        },
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "Slide subtitle",
          "default": "Slide description"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
