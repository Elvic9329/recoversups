{% comment %}
  Certification Icon SVG Component - RecoverSups Theme
  
  Description: Renders SVG icons for certifications and quality badges
  
  Parameters:
    - code: Certification code (required)
    - size: Icon size override (optional)
  
  Usage:
    {% render 'certification-icon-svg', code: 'nsf' %}
{% endcomment %}

{% liquid
  assign code = code | default: 'default'
  assign size = size | default: 24
%}

{% case code %}
  {% when 'nsf' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--nsf" aria-hidden="true">
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
      <path d="M9 12l2 2 4-4"/>
    </svg>
    
  {% when 'gmp' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--gmp" aria-hidden="true">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
      <polyline points="14,2 14,8 20,8"/>
      <line x1="16" y1="13" x2="8" y2="13"/>
      <line x1="16" y1="17" x2="8" y2="17"/>
      <polyline points="10,9 9,9 8,9"/>
    </svg>
    
  {% when 'usda-organic' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--organic" aria-hidden="true">
      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
      <circle cx="12" cy="12" r="3"/>
    </svg>
    
  {% when 'fda' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--fda" aria-hidden="true">
      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
      <circle cx="9" cy="9" r="2"/>
      <path d="M21 15.5c-2.5-3.5-7-3.5-9.5 0"/>
      <path d="M3.5 15.5c2.5-3.5 7-3.5 9.5 0"/>
    </svg>
    
  {% when 'third-party-tested' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--tested" aria-hidden="true">
      <path d="M9 11l3 3 8-8"/>
      <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9c2.35 0 4.48.9 6.08 2.38"/>
    </svg>
    
  {% when 'gluten-free' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--gluten-free" aria-hidden="true">
      <path d="M18 6L6 18"/>
      <path d="M6 6l12 12"/>
      <circle cx="12" cy="12" r="10"/>
    </svg>
    
  {% when 'vegan' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--vegan" aria-hidden="true">
      <path d="M7 20s4-9 6-9 6 9 6 9"/>
