  {% when 'made-in-usa' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--usa" aria-hidden="true">
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
      <path d="M8 10h8"/>
      <path d="M8 14h8"/>
      <path d="M8 18h8"/>
    </svg>
    
  {% else %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--default" aria-hidden="true">
      <circle cx="12" cy="12" r="10"/>
      <path d="M9 12l2 2 4-4"/>
    </svg>
{% endcase %}