      <path d="M12 8v8"/>
    </svg>
    
  {% when 'halal' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="certification-icon-svg certification-icon-svg--halal" aria-hidden="true">
      <circle cx="12" cy="12" r="10"/>
