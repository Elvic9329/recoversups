{% comment %}
  Benefit Icon SVG Component - RecoverSups Theme
  
  Description: Renders SVG icons for supplement benefits
  
  Parameters:
    - icon: Icon name (required)
    - goal: Fitness goal for coloring (optional)
    - size: Icon size override (optional)
  
  Usage:
    {% render 'benefit-icon-svg', icon: 'muscle', goal: 'muscle' %}
{% endcomment %}

{% liquid
  assign icon = icon | default: 'default'
  assign goal = goal | default: 'general'
  assign size = size | default: 24
%}

{% case icon %}
  {% when 'muscle' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="benefit-icon-svg benefit-icon-svg--{{ goal }}" aria-hidden="true">
      <path d="M6.5 12c0-1.657 1.343-3 3-3s3 1.343 3 3-1.343 3-3 3-3-1.343-3-3z"/>
      <path d="M17.5 12c0-1.657 1.343-3 3-3s3 1.343 3 3-1.343 3-3 3-3-1.343-3-3z"/>
      <path d="M12.5 6v12"/>
      <path d="M9.5 9l6 6"/>
      <path d="M15.5 9l-6 6"/>
    </svg>
    
  {% when 'energy' %}
    <svg width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="benefit-icon-svg benefit-icon-svg--{{ goal }}" aria-hidden="true">
      <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
