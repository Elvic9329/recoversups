{% comment %}
404 Error Page Template - RecoverSups Theme
{% endcomment %}

<div class="template-404">
  <div class="page-width page-content">
    <div class="grid">
      <div class="grid__item">
        <div class="errors text-center">
          <h1>{{ 'templates.404.title' | t }}</h1>
          <p>{{ 'templates.404.subtext' | t }}</p>
          <a href="{{ routes.root_url }}" class="btn">
            {{ 'general.404.link' | t }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>