{% comment %}
Article Template - RecoverSups Theme
{% endcomment %}

<div class="page-width">
  <article class="article">
    <header class="article-header">
      <h1 class="article-title">{{ article.title }}</h1>
      <p class="article-meta">
        {{ article.published_at | date: '%B %d, %Y' }}
        {% if article.author %}by {{ article.author }}{% endif %}
      </p>
    </header>
    
    <div class="article-content rte">
      {{ article.content }}
    </div>
    
    <footer class="article-footer">
      {% if blog.comments_enabled? %}
        <h3>Comments</h3>
        {% paginate article.comments by 5 %}
          {% for comment in article.comments %}
            <div class="comment">
              <h4>{{ comment.author }}</h4>
              <p><time>{{ comment.created_at | date: '%B %d, %Y' }}</time></p>
              <div class="comment-content">{{ comment.content }}</div>
            </div>
          {% endfor %}
          {{ paginate | default_pagination }}
        {% endpaginate %}
        
        {% form 'new_comment', article %}
          <h3>Leave a comment</h3>
          <div class="form-row">
            <label for="CommentAuthor">Name</label>
            <input type="text" name="comment[author]" id="CommentAuthor" required>
          </div>
          <div class="form-row">
            <label for="CommentEmail">Email</label>
            <input type="email" name="comment[email]" id="CommentEmail" required>
          </div>
          <div class="form-row">
            <label for="CommentBody">Message</label>
            <textarea name="comment[body]" id="CommentBody" required></textarea>
          </div>
          <button type="submit">Post Comment</button>
        {% endform %}
      {% endif %}
    </footer>
  </article>
</div>