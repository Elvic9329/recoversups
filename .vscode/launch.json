{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Shopify Theme",
      "type": "chrome",
      "request": "launch",
      "url": "https://recoversups.myshopify.com",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": "verbose",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-data",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor",
        "--allow-running-insecure-content"
      ]
    },
    {
      "name": "Debug Local Development",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:9292",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": "verbose",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-data-local"
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
}