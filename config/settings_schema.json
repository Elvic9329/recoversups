[
  {
    "name": "theme_info",
    "theme_name": "RecoverSups",
    "theme_version": "1.0.0",
    "theme_author": "RecoverSups Team",
    "theme_documentation_url": "https://recoversups.pe/docs",
    "theme_support_url": "https://recoversups.pe/support"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#b62921"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color",
        "default": "#2c3e50"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body Font",
        "default": "montserrat_n4"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading Font",
        "default": "montserrat_n7"
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo Width",
        "min": 100,
        "max": 300,
        "step": 10,
        "default": 150,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_sticky_header",
        "label": "Enable Sticky Header",
        "default": true
      },
      {
        "type": "range",
        "id": "container_width",
        "label": "Container Width",
        "min": 1200,
        "max": 1600,
        "step": 50,
        "default": 1280,
        "unit": "px"
      }
    ]
  }
]